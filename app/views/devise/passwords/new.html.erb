<div class='login-box'>
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |form| %>
    <%= form.input :email, input_html: {class: 'span5'} %>
    <%= form.submit "Send me reset password instructions", class: 'btn-large btn' %>
  <% end %>
  <hr>
  <%= link_to 'Sign In', new_user_session_url, class: 'btn' %>
  or
  <%= link_to 'Sign Up', new_user_registration_url, class: 'btn' %>
</div>