<div class="login-box">

  <h2>Sign in</h2>

  <%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |form| %>

    <%= form.input :email, input_html: {class: 'span5'} %>
    <%= form.input :password, input_html: {class: 'span5'}  if @user.password_required? %>
    <%= form.submit 'Sign in', class: 'btn-large btn' %>

    <% if devise_mapping.rememberable? %>
      <%= form.label :remember_me, class: 'checkbox', id: 'remember_me_checkbox' do %>
        <%= form.check_box :remember_me %>
        Remember Me
      <%end%>
    <% end %>

    <br/>
  <%end%>
  <hr>
  <%= link_to "Sign in with Github", user_omniauth_authorize_path(:github), class: 'btn-large btn-info' %>
  <div>
    <br>
    <%= link_to 'forgot your password?' , new_user_password_url %>
  </div>
</div>
