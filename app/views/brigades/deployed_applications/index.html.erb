<%= form_tag brigade_deployed_applications_path(@brigade), method: :get do %>
  <%= text_field_tag :query %>
  <%= submit_tag 'Search' %>
<%end%>

<%= link_to 'Deploy new application', new_brigade_deployed_application_path(@brigade) %>

<% if @deployed_applications.present? %>
  <%= render partial: 'deployed_applications/deployed_application', collection: @deployed_applications %>
<%else%>
  <%= content_tag :h2, "There are no apps currently deployed" %>
<% end %>
