<header id="top-deck">
  <div class="content">
    <a href="/" class="logo"></a>
    <nav class="primary">
      <ul>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to 'Home', root_path %>
        </li>
        <li class="<%= 'active' if current_page?(applications_path) %>">
          <%= link_to 'Applications', applications_path %>
        </li>
        <li class="<%= 'active' if current_page?(deployed_applications_path(filter_by: 'locations')) %>">
          <%= link_to 'Cities', deployed_applications_path(filter_by: 'locations') %>
        </li>
        <li class="<%= 'active' if current_page?(deployed_applications_path(filter_by: 'brigades')) %>">
          <%= link_to 'Brigades', deployed_applications_path(filter_by: 'brigades') %>
        </li>
        <li class="<%= 'active' if current_page?(users_path) %>">
          <%= link_to 'People', users_path %>
        </li>
        <li>About</li>
      </ul>
    </nav>
    <nav class="admin">
      <ul>
        <%= display_session_links %>
      </ul>
    </nav>
    <div class="clear"></div>
  </div>
</header>
