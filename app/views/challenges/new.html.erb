<div id="challenge-form">
  <%= form_for @challenge do |f| %>
    <h1>
      I challenge
      <%= f.select :location_id, (Location.all.map { |location| [location.name, location.id] } << ['Add Location', 'Add Location']), {}, class: 'location-selector' %>
      to...
    <span class="wordbox">
      <%= f.text_field :purpose, placeholder: 'do something cool' %>
    </span>
    </h1>
</div>
<div class="stars">
  ***
</div>
<div>
  <h1>Please provide additional details</h1></br>
    <%= f.label :organization_name, 'Organization (or Chapter) Name' %>
    <%= f.text_field :organization_name, class: 'span12' %>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'span12' %>
    <%= f.submit %>
  <% end %>
</div>

<%= render 'shared/location_modal' %>
