<%= form_tag location_deployed_applications_path(@location), method: :get do %>
  <%= text_field_tag :query %>
  <%= submit_tag 'Search' %>
<%end%>

<%= link_to 'Deploy new application', new_location_deployed_application_path(@location) %>

<% if @deployed_applications.present? %>
  <table class='table-striped full'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Brigade Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'deployed_applications/deployed_application', collection: @deployed_applications %>
    </tbody>
  </table>
<%else%>
  <%= content_tag :h2, "There are no apps currently deployed" %>
<% end %>
